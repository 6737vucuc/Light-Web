{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "functions": {
    "app/api/messages/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/groups/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/messages/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json; charset=utf-8"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-messages",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/cleanup-group-messages",
      "schedule": "0 0 * * *"
    }
  ]
}

